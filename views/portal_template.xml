<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_my_home_rfp_breadcrumbs" name="Portal RFP Menu" inherit_id="portal.portal_breadcrumbs"
              priority="30">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'requesting_subdomain'" class="breadcrumb-item">
                <t t-esc="'Request Subdomain'"/>
            </li>
            <li t-if="page_name == 'subdomain_list'" class="breadcrumb-item">
                <t t-esc="'All Subdomains'"/>
            </li>
        </xpath>
    </template>
    <template id="portal_my_subdomains" inherit_id="portal.portal_my_home">
        <xpath expr="//div[@id='portal_common_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/sale/static/src/img/bag.svg'"/>
                <t t-set="title">Subdomain List</t>
                <t t-set="text">Subdomains</t>
                <t t-set="url" t-value="'/my/subdomains'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>

    <template id="portal_supplies"  inherit_id="website.navbar_nav">
        <xpath expr="//ul" position="inside">
            <li t-if="request.env.user.is_public" class="nav-item">
                <a class="nav-link" href="/request_subdomain/create/otp">Request Subdomain</a>
            </li>
        </xpath>
    </template>

    <template id="portal_request_subdomain" name="Request Subdomain">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h1>Request a Subdomain</h1>
                <form action="/my/request-subdomain/submit" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" required="True"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" t-att-value="email" readonly="true"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Subdomain</label>
                        <input id="subdomain_input" type="text" name="subdomain" class="form-control" maxlength="10" required="True"/>
                        <small id="subdomain_input_error" style="color: red; display:none;">This subdomain is already in use</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select Version</label>
                        <select name="version" class="form-select" required="true">
                            <option value="18">18</option>
                            <option value="17">17</option>
                            <option value="16">16</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select Edition</label>
                        <select name="edition" class="form-select" required="true">
                            <option value="enterprise">enterprise</option>
                            <option value="community">Community</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select Duration</label>
                        <select name="duration" class="form-select" required="true">
                            <option value="3">3 hour</option>
                            <option value="month">1 Month</option>
                            <option value="year">1 Year</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select Modules</label>
                        <select name="module_ids" class="form-select" multiple="multiple" required="true">
                            <t t-foreach="modules" t-as="mod">
                                <option t-att-value="mod.name">
                                    <t t-esc="mod.shortdesc or mod.name"/>
                                </option>
                            </t>
                        </select>
                        <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple modules.</small>
                    </div>
                    <button type="submit" class="btn btn-primary" id="subdomain_request_submit">Submit Request</button>
                </form>
            </div>
            <script src="/request_subdomain/static/src/js/check_domain_availability.js">Check availability</script>
        </t>
    </template>

    <template id="subdomain_list" name="Subdomain List">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Available Subdomains</h4>
                    </div>
                    <div class="card-body">
                        <t t-if="subdomains">
                            <ul class="list-group">
                                <t t-foreach="subdomains" t-as="sub">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="fa fa-globe me-2 text-secondary"></i> <t t-esc="sub" /></span>
                                        <a t-att-href="'http://' + sub" class="btn btn-sm btn-outline-primary" target="_blank">Visit</a>
                                    </li>
                                </t>
                            </ul>
                        </t>
                        <t t-else="">
                            <p class="text-muted text-center mb-0">No subdomains found.</p>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_request_thankyou" name="Request Subdomain - Thank You">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="card p-4">
                    <h1 class="h3 mb-3">Thank you!</h1>
                    <p class="lead">
                        Your subdomain request has been submitted successfully.
                    </p>
                    <p>
                        We will review your request and get back to you by email.
                    </p>

                    <div class="mt-4">
                        <a t-att-href="request.env['ir.config_parameter'].sudo().get_param('web.base.url', '/')" class="btn btn-outline-primary me-2">
                            Back to Website
                        </a>
                        <a t-att-href="'/my'" class="btn btn-primary">
                            Go to My Portal
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>