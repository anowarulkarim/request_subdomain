<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_request_subdomain_search" model="ir.ui.view">
        <field name="name">request.subdomain.search</field>
        <field name="model">request_subdomain.requestsubdomain</field>
        <field name="arch" type="xml">
            <search string="Search Request Subdomain">
                <field name="name" string="Name"/>
                <field name="email" string="Email"/>
                <field name="subdomain" string="Subdomain"/>

                <filter string="Draft Status" name="filter_draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Active Status" name="filter_status_active" domain="[('status', '=', 'active')]"/>
                <filter string="Stopped Status" name="filter_status_stopped" domain="[('status', '=', 'stopped')]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_request_subdomain_list" model="ir.ui.view">
        <field name="name">request.subdomain.list</field>
        <field name="model">request_subdomain.requestsubdomain</field>
        <field name="arch" type="xml">
            <list string="Subdomain Requests">
                <field name="name"/>
                <field name="email"/>
                <field name="subdomain"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_request_subdomain_form" model="ir.ui.view">
        <field name="name">request.subdomain.form</field>
        <field name="model">request_subdomain.requestsubdomain</field>
        <field name="arch" type="xml">
            <form string="Request Subdomain">
                <sheet>
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button name="action_accept" type="object" class="btn-primary" string="Accept" invisible="status not in ['draft']"/>
                        <button name="action_decline" type="object" class="btn-primary" string="Decline" invisible="status not in ['draft','stopped']"/>
                        <button name="action_start" type="object" class="btn-secondary" string="Start" invisible="status in ['active','draft']"/>
                        <button name="action_stop" type="object" class="btn-secondary" string="stop" invisible="status in ['stopped','draft']"/>
                    </header>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="subdomain" placeholder="Max 10 characters"/>
                        <field name="version"/>
                            </group>
                        <group>
                        <field name="edition"/>
                        <field name="stop_time"/>
                        <field name="total_duration"/>
                        <field name="approved_date"/>
                            </group>
                        <field name="module_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_request_subdomain" model="ir.actions.act_window">
        <field name="name">Subdomain Requests</field>
        <field name="res_model">request_subdomain.requestsubdomain</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

</odoo>
